<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SURVEY.styles.css" asp-append-version="true" />

    <style>
        .nav-link.active-link {
            color: #5bc0de !important;
        }
    </style>
</head>
<body>
    <header>
        @{
            var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
        }

        <nav class="navbar navbar-expand-lg bg-white mb-3">
            <div class="container">
                <span class="navbar-brand fw-bold text-dark" style="font-size: 10px;">_Surveys</span>

                <div class="ms-auto d-flex align-items-start" style="margin-top:50px;font-size: 10px">
                    <a class="nav-link me-3 @(currentAction == "Index" ? "active-link" : "")"
                       asp-controller="Home" asp-action="Index">
                        FILL OUT SURVEY
                    </a>
                    <a class="nav-link @(currentAction == "SurveyResults" ? "active-link" : "")"
                       asp-controller="Home" asp-action="SurveyResults">
                        VIEW SURVEY RESULTS
                    </a>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
