<style>
/* Light blue border for checkboxes */
    .form-check-input {
        border: 2px solid #ADD8E6;
        /* Optional: make border a bit bigger to be visible */
    }

        /* On focus, keep the border light blue */
        .form-check-input:focus {
            border-color: #ADD8E6;
            box-shadow: 0 0 0 0.2rem rgba(173, 216, 230, 0.5); /* subtle glow */
        }

    /* Add some spacing between checkboxes */
    .form-check {
        margin-right: 20px;
    }


    /* Light blue border for radio buttons */
    input[type="radio"] {
        border: 2px solid #ADD8E6;
        border-radius: 50%; /* Circular border */
        appearance: none; /* Remove default styles */
        width: 16px;
        height: 16px;
        outline: none;
        cursor: pointer;
        position: relative;
    }

        /* Show dot when selected */
        input[type="radio"]:checked::before {
            content: '';
            display: block;
            width: 8px;
            height: 8px;
            background-color: #ADD8E6;
            border-radius: 50%;
            position: absolute;
            top: 4px;
            left: 4px;
        }

        /* Glow on focus */
        input[type="radio"]:focus {
            box-shadow: 0 0 0 2px rgba(173, 216, 230, 0.5);
        }

    .custom-submit-btn {
        background-color: deepskyblue;
        color: white;
        border: none;
        /* Adjust size */
        padding: 4px 40px;
        font-size: 14px;
        /* Adjustable left position */
        margin-left: -600px; /* You can change this value to move it more or less to the left */
    }

        .custom-submit-btn:hover {
            background-color: #87cefa;
        }




